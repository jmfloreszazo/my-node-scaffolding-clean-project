{
    "name": "my-node-scaffolding-clean-project",
    "version": "1.0.0",
    "description": "Sample scaffolding with NodeJS & TypeScript for Clean Architecture",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon src/index.ts",
        "start": "node build/index.js",
        "build": "tsc",
        "format": "prettier . --write",
        "eslint": "eslint src/**/*.ts",
        "prepare": "husky install"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "author": "https://jmfloreszazo.com",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^22.10.1",
        "@typescript-eslint/eslint-plugin": "^8.16.0",
        "@typescript-eslint/parser": "^8.16.0",
        "eslint": "^9.15.0",
        "nodemon": "^3.1.7",
        "prettier": "3.4.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "8.16.0",
        "husky": "^8.0.0"
    }
}
