{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc: build - tsconfig.json",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "jest",
            "type": "shell",
            "command": "npx",
            "args": ["jest", "--runInBand", "--config", "jest.config.js"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "jest: unit tests",
            "type": "shell",
            "command": "npx",
            "args": ["jest", "--runInBand", "--config", "jest.config.js", "tests/unit"],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": ["$tsc"]
        }
    ]
}
